{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["es2017", "dom"],
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "module": "esnext",
        "moduleResolution": "Node",
        "jsx": "react",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./"
    },
    "include": [
        "./src/js/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
