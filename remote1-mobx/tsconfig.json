{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "es2016", "dom"],
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "jsx": "react",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./"
    },
    "include": [
        "./src/js/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}